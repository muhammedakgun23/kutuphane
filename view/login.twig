{% include "header.twig" %}
<div class="container login-pages-container  d-flex align-items-center ">
	<div class="row login-box d-flex align-items-center">
		<div class="col-md-6 col-sm-2 text-center">
			<img src="../view/images/logom.png" width="80%" alt="">
		</div>
		<div class="col-md-6 col-sm-12">
			<div class="login-snip">
				<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Giriş</label>
				<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Kaydol</label>
				<div class="login-space">
					<div class="login">
						<form action="login.php" method="post">
							<div class="group"><input type="text" class="input" name="email" placeholder="Email"></div>
							<div class="group"><input type="password" class="input" name="password" placeholder="Şifre"></div>
							<input type="hidden" class="input" name="submit" placeholder="Şifre">
							<div class="group">
								<input type="submit" class="button" value="Giriş"></div>
						</form>
						<h5 {% if loginmessage %} class="message-form" {% endif %}>{{ loginmessage }}</h5>
						<h5 {% if errorpost %} class="message-form" {% endif %}>{{ errorpost }}</h5>
						<div class="hr"></div>
					</div>
					<div class="sign-up-form">
						<form action="registermember.php" method="post">
							<div class="group"><input type="text" class="input" name="name" placeholder="İsim"></div>
							<div class="group"><input type="text" class="input" name="surname" placeholder="Soyisim"></div>
							<div class="group"><input type="email" class="input" name="email" placeholder="E-mail"></div>
							<div class="group"><input type="password" class="input" name="password" placeholder="Şifre"></div>
							<input type="hidden" class="input" name="submit" placeholder="">
							<div class="group">
								<input type="submit" class="button" value="Kayıt Ol"></div>
						</form>
						<div class="hr"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
    }
</script>
